@model ClinicaMedica.Model.ViewModel.TurnoViewModel

@{
    ViewData["Title"] = "Definir";
}

<h4>Definir turnos del dia</h4>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Definir" method="post">

    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" />
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Horario Id
                </th>
                <th>
                    Horario Inicio
                </th>
                <th>
                    Horario Fin
                </th>
                <th>
                    Habilitar
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Horarios.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model.Horarios[i].HorarioId" class="form-control" readonly />
                    </td>
                    <td>
                        <input asp-for="@Model.Horarios[i].HorarioInicio" class="form-control" readonly>
                    </td>
                    <td>
                        <input asp-for="@Model.Horarios[i].HorarioFin" class="form-control" readonly>
                    </td>
                    <td>
                        <input asp-for="@Model.Horarios[i].Habilitado" type="checkbox" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

