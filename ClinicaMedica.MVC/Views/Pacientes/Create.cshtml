@model ClinicaMedica.Model.DTOs.Create.PacientesCreacionDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PacientesDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Persona.Nombre" class="control-label"></label>
                <input asp-for="Persona.Nombre" class="form-control" />
                @* <span asp-validation-for="PacienteId" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Persona.Apellido" class="control-label"></label>
                <input asp-for="Persona.Apellido" class="form-control" />
            </div>
                
            <div class="form-group">
                <label asp-for="Persona.Direccion" class="control-label"></label>
                <input asp-for="Persona.Direccion" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Persona.Dni" class="control-label"></label>
                <input asp-for="Persona.Dni" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Persona.Telefono" class="control-label"></label>
                <input asp-for="Persona.Telefono" class="form-control" />
            </div>
                       
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ObraSocial" /> @Html.DisplayNameFor(model => model.ObraSocial)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
