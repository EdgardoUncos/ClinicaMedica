@model ClinicaMedica.Model.DTOs.Basic.LoginUsuario
@{
    ViewData["Title"] = "Login";
}

<div class="card">
    <div class="card-body">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="NombreUsuario" class="form-label"></label>
                <input asp-for="NombreUsuario" class="form-control" autocomplete="off" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn btn-primary">Login</button>
            <a class="btn btn-success" asp-action="registro">Crear una nueva cuenta</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

